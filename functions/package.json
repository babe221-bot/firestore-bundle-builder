  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.4.5",
    "@biomejs/biome": "2.1.0",
    "ts-node": "^10.9.2"
